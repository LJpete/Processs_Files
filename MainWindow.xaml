<Window
    x:Class="App1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Launcher">


    <Grid Background="#d1cfcb">
        <Border
            Background="#5d6b63"
            CornerRadius="12"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="470"
            Height="300">
            <!-- Set size on Border instead -->

            <StackPanel Spacing="14">
                <!-- Title -->
                <TextBlock
                    Text="Plate Setup"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Foreground="#dce5e6"
                    HorizontalAlignment="Center" />

                <!-- Dropdown button -->
                <DropDownButton 
                    x:Name="PlatesDropDownButton"
                    Content="Udrop chip"
                    Width="150"
                    Background="{ThemeResource ControlFillColorDefaultBrush}">
                    <DropDownButton.Resources>
                        <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="#444444"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FF0078D7"/>
                    </DropDownButton.Resources>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Plate A Only" Tag="AAAA" Click="PlateSelected"/>
                            <MenuFlyoutItem Text="Plate B Only" Tag="BBBB" Click="PlateSelected"/>
                            <MenuFlyoutItem Text="Plates read ABAB" Tag="ABAB" Click="PlateSelected"/>
                            <MenuFlyoutItem Text="Plates read BABA" Tag="BABA" Click="PlateSelected"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>

                <TextBox
                    x:Name="MyTextBox"
                    PlaceholderText="Enter H Barcode"
                    FontSize="14"
                    Background="{ThemeResource TextControlBackground}"
                    BorderBrush="{ThemeResource TextControlBorderBrush}">
                    <TextBox.Resources>
                        <SolidColorBrush x:Key="TextControlBorderBrush" Color="#444444"/>
                        <SolidColorBrush x:Key="TextControlBorderBrushPointerOver" Color="#FF0078D7"/>
                        <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="#FF0078D7"/>
                    </TextBox.Resources>
                </TextBox>

                <DropDownButton 
    x:Name="nPlatesDropDownButton"
    Content="n Chips read"
    Width="150"
    Background="{ThemeResource ControlFillColorDefaultBrush}">
                    <DropDownButton.Resources>
                        <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="#444444"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FF0078D7"/>
                    </DropDownButton.Resources>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="1" Tag="1" Click="PlateCount"/>
                            <MenuFlyoutItem Text="2" Tag="2" Click="PlateCount"/>
                            <MenuFlyoutItem Text="3" Tag="3" Click="PlateCount"/>
                            <MenuFlyoutItem Text="4" Tag="4" Click="PlateCount"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>

                <CheckBox
                    x:Name="MyCheckBox"
                    Content="Correct number of Samples"
                    FontSize="14"
                    Foreground="#444444"
                    HorizontalAlignment="Center">
                </CheckBox>

                <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>


                    <Button
                        Grid.Column="0"
                        Content="Check Output Files"
                        Height="36"
                        FontSize="14"
                        Background="{ThemeResource ControlFillColorDefaultBrush}"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Click="OnSubmitClicked">
                        <Button.Resources>
                            <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="#444444"/>
                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FF0078D7"/>
                        </Button.Resources>
                    </Button>

                    <Button
                        Grid.Column="1"
                        Content="Run My assays"
                        Height="36"
                        FontSize="14"
                        Background="{ThemeResource ControlFillColorDefaultBrush}"
                        Foreground="White"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Click="LaunchCliButton_Click">
                        <Button.Resources>
                            <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="#444444"/>
                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FF0078D7"/>
                        </Button.Resources>
                    </Button>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Window>
